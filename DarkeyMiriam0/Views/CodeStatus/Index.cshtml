@model IEnumerable<DarkeyMiriam0.Models.CodeStatus>

@{
    ViewBag.Title = "קודי סטטוס";
}

<table>
    <tr>
    <tr>
        <td><div style="height:30px;"></div></td>
    </tr>
    <tr>
        <td class="title">רשימת סטטוסים</td>
        <td><div style=" width:400px;"></div></td>
        <td> @Html.ActionLink("צור חדש", "Create", "CodeStatus", null, new { @class = "linkdetails" })</td>
    </tr>
    <tr>
        <td><div style="height:30px;"></div></td>
    </tr>
</table>
<div style="width:450px;">
    <table cellpadding="10" cellspacing="10" class="details">
        <tr>
            <td><h3>  קוד</h3></td>
            <td> <h3>סטטוס</h3></td>
        </tr>


        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>


                <td>
                    @Html.ActionLink("עדכון", "Edit", new { id = item.Id }, new { @class = "linkdetails" })
                </td>
                <td>
                    @Html.ActionLink("מחק", "Delete", new { id = item.Id }, new { @class = "linkdetails" })
                </td>

            </tr>
        }
        </table>
    </div>
