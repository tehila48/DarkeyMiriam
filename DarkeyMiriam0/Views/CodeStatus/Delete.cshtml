@model DarkeyMiriam0.Models.CodeStatus

@{
    ViewBag.Title = "מחיקת סטטוס";
}

<table>
    <tr>
        <td><div style="height:30px;"></div></td>
    </tr>
    <tr>
        <td class="title">מחיקת סטטוס</td>
    <tr>
        <td><div style="height:30px;"></div></td>
    </tr>
</table>


<div style="width:550px;">

    <table class="details">

        <tr>
            <td>
                <h3>  קוד</h3>
            </td>

            <td>
                @Html.DisplayFor(model => model.Code)
            </td>
        </tr>
        <tr>
            <td>
                <h3>  סטטוס</h3>
            </td>

            <td>
                @Html.DisplayFor(model => model.Status)
            </td>
        </tr>
    </table>

    @using (Html.BeginForm())
            {
        @Html.AntiForgeryToken()
        <div>
            <table style="margin-right:110px;">
                <tr>
                    <td><div style="height:15px;"></div></td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="מחק" class="linkdetails" style="border-radius:1em;" />
                    </td>
                    <td><div style="width:30px;"></div></td>
                    <td>
                        @Html.ActionLink("חזור לרשימה", "Index", "CodeStatus", null, new { @class = "linkdetails" })
                    </td>
                </tr>
            </table>
        </div>
    }
</div>